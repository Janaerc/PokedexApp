<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="#222224">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:background="#222224"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Pokedex"
            android:textAlignment="center"
            android:textColor="#F00000"
            android:textSize="60sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="0/150"
            android:textAlignment="viewEnd"
            android:textColor="#F0F0F0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Pokemons Cadastrados"
            android:textAlignment="viewEnd"
            android:textColor="#F00000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/HABILIDADES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="HABILIDADES"
            android:textAlignment="center"
            android:textColor="#F00000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/TxtHabilidade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidade 1"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

        <TextView
            android:id="@+id/TxtHabilidade2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidade 2"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

        <TextView
            android:id="@+id/TxtHabilidade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidade 3"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="TIPOS"
            android:textAlignment="center"
            android:textColor="#F00000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtTipo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo 1"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

        <TextView
            android:id="@+id/txtTipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo 2"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

        <TextView
            android:id="@+id/txtTipo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo 3"
            android:textAlignment="center"
            android:textColor="#F0F0F0"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>