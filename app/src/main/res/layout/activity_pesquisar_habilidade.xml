<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesquisarHabilidade"
    android:background="#222224">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15sp"
        android:background="#222224"
        android:orientation="vertical">

        <TextView
            android:id="@+id/POKEDEXPesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="POKEDEX"
            android:textAlignment="center"
            android:textColor="#F00000"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/editTxtPesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:backgroundTint="#EE1515"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Digite aqui"
            android:textColor="#F00000" />

        <Button
            android:id="@+id/BtnPesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="#F00000"
            android:onClick="pesquisar"
            android:text="Pesquisar"
            android:textColor="#F0F0F0"
            android:textSize="25sp"
            app:iconTint="#F00000" />

        <TextView
            android:id="@+id/txtPesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#F0F0F0" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>