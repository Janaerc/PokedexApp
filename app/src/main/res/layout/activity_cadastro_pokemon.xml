<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:backgroundTint="#F0F0F0"
    tools:context=".CadastroPokemon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp">


        <TextView
            android:id="@+id/POKEDEXPesquisar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="POKEDEX"
            android:textAlignment="center"
            android:textColor="#F00000"
            android:textSize="60sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text="CADASTRAR POKEMON"
            android:textColor="#EE1515"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:text="Nome"
            android:textColor="#222224"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNomePokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#EE1515"
            android:ems="0"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Tipo"
            android:textColor="#222224"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTipoPokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#EE1515"
            android:ems="0"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Habilidades"
            android:textColor="#222224"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#EE1515"
            android:ems="0"
            android:inputType="textPersonName"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0"
            android:text="Foto"
            android:textColor="#222224"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btGaleria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:backgroundTint="#222224"
                android:gravity="center"
                android:onClick="galeria"
                android:text="Galeria"
                android:textColor="#F0F0F0"
                android:textSize="25sp"
                app:iconTint="#F00000" />

            <Button
                android:id="@+id/btCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#222224"
                android:gravity="center"
                android:onClick="camera"
                android:text="Camera"
                android:textColor="#F0F0F0"
                android:textSize="25sp"
                app:iconTint="#F00000" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="#F00000"
            android:onClick="cadastrar"
            android:text="Cadastrar"
            android:textColor="#F0F0F0"
            android:textSize="25sp"
            app:iconTint="#F00000" />

        <TextView
            android:id="@+id/idUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>